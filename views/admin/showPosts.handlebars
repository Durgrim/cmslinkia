<div class="col py-2">
    {{#if successMessage}}
        <div class="alert alert-success">
            {{successMessage}}
        </div>
    {{/if}}
    <h1><u>Mostrar Posts</u></h1><br>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Contenido</th>
                <th scope="col">Visibilidad</th>
                <th scope="col">Fecha</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                {{!-- <td>{{_id}}</td> --}}
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{visibility}}</td>
                <td class="h-6 small">{{date datetime}}</td>
                <td><a href="/admin/editPosts/{{_id}}" class="btn btn-dark">Edit</td>
                <td><a href="/admin/deletePosts/{{_id}}" class="btn btn-danger">Eliminar</td>
            </tr>

            {{/each}}
        </tbody>
    </table>
</div>