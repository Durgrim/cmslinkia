<div class="col py-2">
    <h1><u>Editar Post</u></h1><br>
    <p>ID = {{singlePost._id}}</p>
    {{#each errors}}
        <div class="alert alert-danger">
            {{message}}
        </div>
    {{/each}}
    

    <form action="/admin/editPosts/{{singlePost._id}}" method="post">
        <div class="form-group">
            <label for="title">Titulo</label>
            <input name="title" class="form-control" id="title" type="text" value="{{singlePost.title}}" required>
        </div>

        <div class="form-group">
            <label for="content">Contenido</label>
            <textarea class="form-control" id="content" name="content" rows="10" cols="50" required>{{singlePost.content}}</textarea>
        </div>

        <div class="form-group">     
            <label for="visibility">Visiblidad</label>
            <select name="visibility" id="visibility" class="form-control" required>
                {{#selected singlePost.visibility}}
                <option value="publico">Público</option>
                <option value="privado">Privado</option>
                {{/selected}}
            </select>

        </div>

            <ul class="list-group list-group-horizontal">
                <li class="list-group-item">
                    <button class="btn btn-danger" type="submit">Actualizar</button>
    </form>
                </li>    
                <li class="list-group-item">
                    <form action="/admin/showPosts/" method="get">
                        <button class="btn btn-dark" type="submit">Volver atrás</button>
                    </form>
                </li>
        </ul>
</div>