<div class="col py-2">
    <h1><u>Crear Post</u></h1><br>
    {{#each errors}}
    <div class="alert alert-danger">
        {{message}}
    </div>
    {{/each}}
    
    <form action="/admin/createPost" method="post">
        <div class="form-group">
            <label for="title">Titulo</label>
            <input name="title" class="form-control" id="title" type="text" placeholder="Introduce el titulo aquí" required>
        </div>

        <div class="form-group">
            <label for="content">Contenido</label>
            <textarea class="form-control" id="content" name="content" rows="10" cols="50" placeholder="Introduce el contenido aquí" required></textarea>
        </div>

        <div class="form-group">
            <label for="visibility">Visiblidad</label>
            <select name="visibility" id="visibility" class="form-control">
                <option value="publico" selected>Público</option>
                <option value="privado">Privado</option>
            </select>
        </div>

        <br>
        <button type="submit" class="btn btn-primary btn-block">Enviar</button>

    </form>
</div>